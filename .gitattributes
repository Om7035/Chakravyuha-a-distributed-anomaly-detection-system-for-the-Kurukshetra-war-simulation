# Auto detect text files and normalize line endings to LF
* text=auto

# Python
*.py text eol=lf
*.pyw text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.ps1 text eol=crlf
*.cmd text eol=crlf
*.bat text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# YAML
*.yaml text eol=lf
*.yml text eol=lf

# JSON
*.json text eol=lf

# Terraform
*.tf text eol=lf
*.tfvars text eol=lf

# Docker
Dockerfile text eol=lf
